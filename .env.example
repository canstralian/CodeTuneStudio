# CodeTuneStudio Environment Variables
# Copy this file to .env and fill in your actual values

# ============================================================================
# Database Configuration
# ============================================================================
# PostgreSQL connection string (or use sqlite:///database.db for local dev)
DATABASE_URL=sqlite:///database.db
# DATABASE_URL=postgresql://user:password@localhost:5432/codetunestudio

# Enable SQL query logging (true/false)
SQL_DEBUG=false

# ============================================================================
# AI/ML API Keys
# ============================================================================
# OpenAI API key for GPT models (required for OpenAI plugin)
OPENAI_API_KEY=sk-...

# Anthropic API key for Claude models (required for Anthropic plugin)
ANTHROPIC_API_KEY=sk-ant-...

# Hugging Face token for model downloads and hub access
HF_TOKEN=hf_...

# ============================================================================
# Argilla Configuration (for dataset management)
# ============================================================================
# Argilla API URL (default: https://api.argilla.io)
ARGILLA_API_URL=https://api.argilla.io

# Argilla API key
ARGILLA_API_KEY=

# Argilla workspace name (default workspace if not set)
ARGILLA_WORKSPACE=default

# ============================================================================
# Distributed Training Configuration
# ============================================================================
# Master address for distributed training (default: localhost)
MASTER_ADDR=localhost

# Master port for distributed training (default: 12355)
MASTER_PORT=12355

# ============================================================================
# Application Configuration
# ============================================================================
# Hugging Face Space ID (if running on HF Spaces)
SPACE_ID=

# ============================================================================
# Notes
# ============================================================================
# 1. Never commit .env file to version control
# 2. Keep your API keys secure and rotate them regularly
# 3. For production, use environment-specific configuration
# 4. SQLite is suitable for development only - use PostgreSQL in production
