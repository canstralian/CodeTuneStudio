# CodeTuneStudio Environment Variables
# Copy this file to .env and fill in your actual values

# =============================================================================
# Application Server Configuration
# =============================================================================
# Host address to bind the application server to
HOST=localhost

# Port number for the application server
PORT=7860

# Run server in headless mode (no browser auto-open)
# Set to "true" for production deployments
SERVER_HEADLESS=false

# =============================================================================
# Database Configuration
# =============================================================================
# PostgreSQL connection string (recommended for production)
DATABASE_URL=postgresql://user:password@localhost:5432/dbname
# Alternative SQLite (default for development): sqlite:///database.db

# Enable SQL query debugging (prints all SQL statements)
# Set to "true" only for development/debugging
SQL_DEBUG=false

# =============================================================================
# Logging Configuration
# =============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Optional: Path to log file (if not set, logs only to console)
# LOG_FILE=/var/log/codetune-studio/app.log

# Enable JSON formatted logging (recommended for production)
# When true, logs are output in JSON format with structured fields
# When false, logs use human-readable colored format (better for development)
LOG_JSON=false

# =============================================================================
# API Keys for Code Analysis Plugins
# =============================================================================
# OpenAI API key for code analysis
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API key for code suggestions
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# =============================================================================
# Hugging Face Integration
# =============================================================================
# Token for deploying models to Hugging Face Hub
HF_TOKEN=your_huggingface_token_here

# Hugging Face Space ID (for deployments)
SPACE_ID=your_space_id

# =============================================================================
# Distributed Training Configuration (Optional)
# =============================================================================
# These are typically set automatically by the training framework
# Uncomment and configure if running distributed training manually

# Master node address for distributed training
# MASTER_ADDR=localhost

# Master node port for distributed training
# MASTER_PORT=12355

# World size (total number of processes)
# WORLD_SIZE=1

# Rank of this process (0 for master)
# RANK=0

# =============================================================================
# Security Settings
# =============================================================================
# Secret key for Flask sessions (generate a random string)
# SECRET_KEY=your_secret_key_here

# CORS allowed origins (comma-separated)
# CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# =============================================================================
# Performance Tuning
# =============================================================================
# Database connection pool size
# DB_POOL_SIZE=10

# Maximum overflow connections
# DB_MAX_OVERFLOW=20

# Connection timeout in seconds
# DB_POOL_TIMEOUT=30

# =============================================================================
# Feature Flags
# =============================================================================
# Enable experimental features
# ENABLE_EXPERIMENTAL_FEATURES=false

# Enable telemetry and anonymous usage statistics
# ENABLE_TELEMETRY=true
