# CodeTuneStudio Environment Variables
# Copy this file to .env and fill in your actual values

# Database Configuration
# PostgreSQL connection string (falls back to SQLite if not set)
DATABASE_URL=postgresql://user:password@localhost:5432/dbname
# Alternative SQLite (default): sqlite:///database.db

# API Keys for Code Analysis Plugins
# OpenAI API key for code analysis
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API key for code suggestions
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Hugging Face Hub
# Token for deploying models to Hugging Face Hub
HF_TOKEN=your_huggingface_token_here

# API Security
# API key for endpoint authentication (generate with: python -c "import secrets; print(secrets.token_hex(32))")
API_KEY=your_api_key_here

# Flask Configuration
# Secret key for session management (generate with: python -c "import secrets; print(secrets.token_hex(32))")
SECRET_KEY=your_secret_key_here

# Redis URL for rate limiting (optional, defaults to memory://)
# REDIS_URL=redis://localhost:6379/0

# Distributed Training (optional)
# These are typically set automatically by the training framework
# MASTER_ADDR=localhost
# MASTER_PORT=12355

# Debug Settings (optional)
# SQL_DEBUG=False
# SPACE_ID=your_space_id
# FLASK_ENV=development
