# Environment Configuration Template
# Copy this file to .env and configure for your environment

# Database Configuration
DATABASE_URL=sqlite:///database.db
# For PostgreSQL: postgresql://username:password@localhost:5432/database_name
SQL_DEBUG=false

# API Keys (Optional - only needed for specific plugins)
# Anthropic API Key for code suggestions
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OpenAI API Key for code analysis  
OPENAI_API_KEY=your_openai_api_key_here

# HuggingFace Hub Token (for private datasets/models)
HUGGINGFACE_TOKEN=your_huggingface_token_here

# Argilla Configuration (Optional)
ARGILLA_API_URL=http://localhost:6900
ARGILLA_API_KEY=your_argilla_api_key

# Application Settings
FLASK_ENV=development
FLASK_DEBUG=true

# Streamlit Configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=localhost

# Security Settings
SECRET_KEY=your_secret_key_here_change_in_production

# Training Configuration
MAX_CONCURRENT_TRAININGS=2
DEFAULT_MODEL_STORAGE_PATH=./models
DEFAULT_DATASET_CACHE_PATH=./cache

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=codetunestudio.log

# Performance Settings
MAX_WORKERS=4
CACHE_SIZE=100

# External Service Timeouts (seconds)
API_TIMEOUT=30
DATABASE_TIMEOUT=30